{
  "name": "next-starter",
  "version": "0.0.1",
  "description": "Next.js starter with vscode dev containers, react testing library and typescript support",
  "main": "index.js",
  "private": true,
  "scripts": {
    "commit": "cz",
    "postinstall": "is-ci || husky install",
    "start": "npm run build && npm-run-all --parallel server:start client:start",
    "dev": "npm-run-all --parallel server:dev client:dev",
    "build": "npm-run-all --parallel server:build client:build",
    "client:dev": "next dev",
    "client:build": "next build",
    "client:start": "next start",
    "server:dev": "npm-run-all --parallel server:build:watch server:watch",
    "server:build": "tsc --p ./server/tsconfig.json",
    "server:start": "node ./dist/app.js",
    "server:watch": "nodemon ./dist/app.js",
    "server:build:watch": "tsc --watch --p ./server/tsconfig.json",
    "lint": "npm-run-all --parallel lint:client:server lint:cypress",
    "lint:client:server": "eslint --ignore-path .eslintignore --ext .js,.ts,.tsx .",
    "lint:cypress": "eslint --ignore-path .eslintignore -c .eslintrc.json --ext .js,.ts,.tsx .",
    "lint:jest:client:server": "jest --config test/jest.lint.js",
    "lint-staged": "lint-staged",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|json)\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:validate": "npm run prettier -- list-different",
    "check-types": "npm-run-all --parallel check-types-server check-types-client check-types-cypress",
    "check-types-server": "tsc --noEmit --p ./server/tsconfig.json",
    "check-types-client": "tsc --noEmit --p ./tsconfig.json",
    "check-types-cypress": "tsc --noEmit --p ./cypress/tsconfig.json",
    "test:local": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "pretest:e2e:run": "npm run client:build",
    "test:e2e:run": "start-server-and-test start http://localhost:3000 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 cy:open",
    "validate": "npm run lint && npm run check-types && npm run test:local && npm run test:e2e:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvgdev/next-starter.git"
  },
  "author": "pvgdev <pvgdev@outlook.com> (https://vishu.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pvgdev/next-starter/issues"
  },
  "homepage": "https://github.com/pvgdev/next-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "babel-jest": "^26.6.1",
    "babel-plugin-emotion": "^10.0.33",
    "chalk": "^2.4.2",
    "commitizen": "^4.2.2",
    "cypress": "^5.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^5.0.0-beta.0",
    "identity-obj-proxy": "^3.0.0",
    "is-ci": "^2.0.0",
    "jest": "^26.6.1",
    "jest-axe": "^4.0.0",
    "jest-emotion": "^10.0.32",
    "jest-environment-jsdom": "^26.6.1",
    "jest-environment-node": "^26.6.1",
    "jest-runner-eslint": "^0.10.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.11.5",
    "test-data-bot": "^0.8.0",
    "typescript": "^4.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "express": "^4.17.1",
    "is-ci-cli": "^2.1.2",
    "next": "^10.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.eslintignore"
    }
  }
}
